<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_vtiger_company_form" model="ir.ui.view">
        <field name="name">res.company.vtiger.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="vtiger_configuration" string="VTiger Configuration">
                    <group col="4" name="vtiger_details">
                        <field name="access_key" required="1"/>
                        <field name="vtiger_server" required="1" placeholder="https://example.com"/>
                        <field name="user_name" required="1" 
                            placeholder="example@test.com"/>
                        <field name="last_sync_date"/>
                    </group>
                </page>
            </notebook>
        </field>
    </record>

</odoo>
